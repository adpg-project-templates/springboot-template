# EditorConfig es un formato para mantener estilos de codificaci√≥n consistentes
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,kt}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{xml,html,xsd,wsdl}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 2

[*.{properties}]
indent_style = space
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

[*.{sh,bat}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab


